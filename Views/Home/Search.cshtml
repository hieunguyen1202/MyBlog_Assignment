@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MyBlog.Models.PostDetailViewModel
<link href="~/css/stylehome.css" rel="stylesheet" />
@* <link href="~/css/bootstrap.min.css" rel="stylesheet" />  *@
<link href="~/css/theme.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet" />
@* <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css"> *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="mt-5">
    <section>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <div class="right_content">
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
                    <section class="section">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    @if (Model.CurrentPost != null && Model.CurrentPost.Any())
                                    {
                                        <div class="search-results">
                                            @foreach (var post in Model.CurrentPost)
                                            {
                                                <div class="candidate-list">
                                                    <div class="candidate-list-box card mt-4">
                                                        <div class="p-4 card-body">
                                                            <div class="align-items-center row">
                                                                <div class="col-auto">
                                                                    <div class="candidate-list-images">
                                                                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@post.PostId"><img src="@post.Thumb" alt="thumb" title="@post.Title" class="avatar-md" /></a>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-9">
                                                                    <div class="candidate-list-content">
                                                                        <h5 class="fs-19 mb-0">
                                                                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@post.PostId" class="primary-link">@post.Title</a><span class="badge bg-success ms-1"></span>
                                                                        </h5>
                                                                        <h6 class="fs-14 mb-2">@post.CreateTime</h6>
                                                                        <p class="text-muted mb-2">@post.Scontent</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info" role="alert">No search results found</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="left_content">
                    <div id="catTech-post"></div>

                    <div class="fashion_technology_area">
                        <div class="fashion">
                            <div id="category-post"></div>
                        </div>
                        <div class="technology">

                            <div id="category1-post"> </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4">
                <aside class="right_content">

                    <div id="recent-posts"></div> @* new feed *@
                    @* tablist *@
                    <div id="tag-comment"></div>
                    <div class="single_sidebar wow fadeInDown">
                        <h2><span>Sponsor</span></h2>
                        <a class="sideAdd" href="#"><img src="https://upload.wikimedia.org/wikipedia/commons/6/68/Logo_FPT_Education.png" alt=""></a>
                    </div>
                </aside>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $('#hot-posts').load("/home/view"),
            $('#recent-posts').load("/home/recentPost"),
            $('#tag-comment').load("/home/tagComment")
    </script>
}
<style>

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .avatar-md {
        height: 8rem;
        width: 8rem;
    }

    .fs-19 {
        font-size: 19px;
    }

    .primary-link {
        color: #314047;
        -webkit-transition: all .5s ease;
        transition: all .5s ease;
    }

    a {
        color: #02af74;
        text-decoration: none;
    }

    .bookmark-post .favorite-icon a, .job-box.bookmark-post .favorite-icon a {
        background-color: #da3746;
        color: #fff;
        border-color: danger;
    }

    .favorite-icon a {
        display: inline-block;
        width: 30px;
        height: 30px;
        font-size: 18px;
        line-height: 30px;
        text-align: center;
        border: 1px solid #eff0f2;
        border-radius: 6px;
        color: rgba(173,181,189,.55);
        -webkit-transition: all .5s ease;
        transition: all .5s ease;
    }


    .candidate-list-box .favorite-icon {
        position: absolute;
        right: 22px;
        top: 22px;
    }

    .fs-14 {
        font-size: 14px;
        color: #aaa;
    }

    .bg-soft-secondary {
        background-color: rgba(116,120,141,.15) !important;
        color: #74788d !important;
    }

    .mt-1 {
        margin-top: 0.25rem !important;
    }

    }
</style>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
