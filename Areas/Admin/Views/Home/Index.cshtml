@{
    ViewData["Title"] = "Admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/styleHome.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />

<div class="container">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Total Users Card Example -->
        <div class="col-md-3 col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-user fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div>Total Users</div>
                            <div class="huge">None</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Contract Card Example -->
        <div class="col-md-3 col-sm-6">
            <a asp-area="Admin" asp-controller="Posts" asp-action="Index">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-file fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div>Total Posts</div>
                            <div class="huge">@ViewBag.countPost</div>
                        </div>
                    </div>
                </div>
            </div></a>
        </div>

        <!-- Total Rental Card Example -->
        <div class="col-md-3 col-sm-6">
            <a  asp-area="Admin" asp-controller="Categories" asp-action="Index">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-list fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div>Total Category</div>
                            <div class="huge">@ViewBag.countCat</div>
                        </div>
                    </div>
                </div>
            </div></a>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-md-3 col-sm-6">
            <a asp-area="Admin" asp-controller="Comment" asp-action="Index">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-comment fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div>Total Comments</div>
                            <div class="huge">@ViewBag.countComment</div>
                        </div>
                    </div>
                </div>
            </div></a>
        </div>
    </div>
</div>
<div class="mt-5">
    <section>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                    <div id="first-post" style="height:45px;width:730px"></div>
                </div>
            </div>
            @* popular post *@
            <div class="col-lg-4 col-md-4 col-sm-4">
                <div id="hot-posts"></div>

            </div>
        </div>
    </section>
</div>
<div class="clearfix"></div>
@section Scripts {
    <script>
        $('#hot-posts').load("/home/view")
    </script>
}



